<script type="text/javascript">

	function letra()
	{
		  let cadena = document.getElementById("mnemonic").value;
		  let letr = cadena.charAt(0);
		  let letr1 = cadena.charAt(1);
		  let letr2 = cadena.charAt(2);
		  let letr3 = cadena.charAt(3);
		  let letr4 = cadena.charAt(4);
		  let letr5 = cadena.charAt(5);

		  if (letr=='T')
		  {

		  	document.getElementById('frase').innerHTML="<span style='color: green;'>"+letr+"</span>"+"Ã©cnico";

		  };

		  if (letr1=='I')
		  {

		  	document.getElementById('frase1').innerHTML="<span style='color: green;'>"+letr1+"</span>"+"nteligente";

		  };

		  if (letr2=='E')
		  {

		  	document.getElementById('frase2').innerHTML="<span style='color: green;'>"+letr2+"</span>"+"labora";

		  };

		    if (letr3=='R')
		  {

		  	document.getElementById('frase3').innerHTML="<span style='color: green;'>"+letr3+"</span>"+"ectificador";

		  };

		    if (letr4=='R')
		  {


		  	document.getElementById('frase4').innerHTML="<span style='color: green;'>"+letr4+"</span>"+"eactivo";

		  };

		      if (letr5=='A')
		  {

		  	document.getElementById('frase5').innerHTML="<span style='color: green;'>"+letr5+"</span>"+"ctivo";

		  };

	}

</script>
